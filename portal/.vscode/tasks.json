{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm_start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "presentation": {
              "focus": true,
              "panel": "dedicated"
            },
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": {
              "owner": "typescript",
              "source": "ts",
              "applyTo": "closedDocuments",
              "fileLocation": [
                "relative",
                "${cwd}"
              ],
              "pattern": "$tsc",
              "background": {
                "activeOnStart": true,
                "beginsPattern": {
                  "regexp": "(.*?)"
                },
                "endsPattern": {
                  "regexp": "Compiled |Failed to compile."
                }
              }
            }
          }
    ]
}